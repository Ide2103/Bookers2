<main>
  <p id="notice">You have created book successflly.</p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img src="/assets/no_image.jpg" alt="">
        <table class="table">
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <th class="name">name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th class="introduction">introduction</th>
              <th><%= user.introduction %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_id">
            <i class="fas fa-user-cog"></i>
            <svg class="svg-inline--fa fa-user-cog fa-w-20" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="user-cog" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" data-fa-i2svg>â€¦</svg>
            <!-- <i class="fas fa-user-cog"></i> Font Awesome fontawesome.com -->
          </a>
        </div>
        <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
          <div class="form-group">
            <%= f.label :title, "Title" %>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.label :body, "Opinion" %>
            <%= f.text_field :body %>
          </div>
          <button class="form-group btn btn-success">Create Book</button>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path do %>
                <%= image_tag @book.user.get_profile_image %>
                <br>
                <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path do %>
                <%= @book.body %>
                <% end %>
              </td>
              <td>
                <button class="btn btn-sm btn-success">
                <%= link_to "Edit", edit_book_path(@book.id) %>
                </button>
              </td>
              <td>
                <button class="btn btn-sm btn-danger">
                <% if @book.user == current_user %>
                <%= link_to "Destroy", books_path(@book), method: :delete %>
                <% end %>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
