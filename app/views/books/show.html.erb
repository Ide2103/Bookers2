<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render "users/info", user: @user %>

        <h2 class="mt-3">New book</h2>
        <% if @book.errors.any? %>
        　　<%= @book.errors.count %>errors prohibited this obj from being saved:
        　　<ul>
          　　<% @book.errors.full_messages.each do |message| %>
          　　<li><%= message %></li>
          　<% end %>
          　</ul>
        <% end %>
          <%= form_with model: @new_book do |f| %>
          <div class="form-group">
            <%= f.label :title, "Title" %>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.label :body, "Opinion" %>
            <%= f.text_field :body %>
          </div>
          <button class="form-group btn btn-success">Create Book</button>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= image_tag @book.user.get_profile_image %>
                <% end %>
                <br>
                <%= link_to user_path(@user) do %>
                <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %><% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %><% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
